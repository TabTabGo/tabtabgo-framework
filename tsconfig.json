{
  "extends": "./tsconfig.build.json",
  "include": [
    "packages",
    "types",
    "scripts",
    "example"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./packages",
    //"outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@tabtabgo/core": [
        "packages/core"
      ],
      "@tabtabgo/web": [
        "packages/web"
      ],
      "$test/*": [
        "test/*"
      ]
    }
  }
}